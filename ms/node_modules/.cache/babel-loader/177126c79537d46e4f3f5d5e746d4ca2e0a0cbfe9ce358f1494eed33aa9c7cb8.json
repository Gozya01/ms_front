密码输入框 -->\n        <el-form-item :error=\"passwordError\">\n          <el-input\n            v-model=\"form.password\"\n            placeholder=\"密码\"\n            type=\"password\"\n            style=\"width: 300px\"\n            @blur=\"checkPassword\"\n            @input=\"validatePassword\"\n          ></el-input>\n        </el-form-item>\n      <!-- 密码规则提示 -->\n      <div class=\"password-rules\">\n        <p>\n          <span :class=\"{ valid: noSpacesValid }\">✔</span> 不能包括空格\n        </p>\n        <p>\n          <span :class=\"{ valid: lengthValid }\">✔</span> 长度为8-16个字符\n        </p>\n        <p>\n          <span :class=\"{ valid: complexityValid }\">✔</span> 必须包含字母、数字、符号中至少2种\n        </p>\n      </div>  \n        <!-- 协议复选框 -->\n        <el-form-item>\n          <el-checkbox v-model=\"form.agree\">\n            我已阅读并同意\n            <a href=\"#\">服务协议</a> 和\n            <a href=\"#\">隐私政策</a>\n          </el-checkbox>\n        </el-form-item>\n  \n        <!-- 注册按钮 -->\n        <el-form-item>\n          <el-button type=\"primary\" @click=\"submitForm\" style=\"width: 300px\">\n            立即注册\n          </el-button>\n        </el-form-item>\n      </el-form>\n  \n      <!-- 注册成功/失败信息 -->\n      <el-dialog :visible.sync=\"dialogVisible\" title=\"注册信息\">\n        <p>{{ submitMessage }}</p>\n      </el-dialog>\n    </div>\n  </template>\n  \n  <script>\n  export default {\n    data() {\n      return {\n        form: {\n          username: '',\n          password: '',\n          agree: false\n        },\n        usernameError: '',\n        passwordError: '',\n        dialogVisible: false,\n        submitMessage: '',\n        noSpacesValid: false,\n      lengthValid: false,\n      complexityValid: false\n      };\n    },\n    methods: {\n      // 检查用户名\n      checkUsername() {\n        if (!this.form.username) {\n            this.usernameError = '用户名不能为空';\n        } else {\n            this.usernameError = '';\n        }\n      },\n      checkPassword() {\n        if (!this.form.password) {\n          this.passwordError = '密码不能为空';\n        } else if (this.form.password.length < 6) {\n          this.passwordError = '密码长度至少6位';\n        } else {\n          this.passwordError = '';\n        }\n      },\n      submitForm() {\n        if (!this.form.username || !this.form.password || !this.form.agree) {\n          this.submitMessage = '注册失败，请填写完整信息并同意服务协议。';\n        } else {\n          this.submitMessage = `注册成功，欢迎 ${this.form.username}!`;\n        }\n        this.dialogVisible = true;\n      }\n    }\n  };\n  </script>\n  \n  <style scoped>\n  /* 容器居中 */\n  .register-container {\n    display: flex;\n    flex-direction: column;\n    justify-content: center;\n    align-items: center;\n    height: 100vh;\n    background-color: #f0f2f5;\n  }\n  \n  /* 标题与副标题 */\n  .register-title {\n    font-size: 26px;\n    font-weight: bold;\n    color: #333;\n    margin-bottom: 10px;\n  }\n  \n  .register-subtitle {\n    font-size: 14px;\n    color: #999;\n    margin-bottom: 30px;\n  }\n  \n  /* 表单容器 */\n  .form-box {\n    background-color: #fff;\n    padding: 20px;\n    border-radius: 8px;\n    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);\n  }\n  \n  /* 注册按钮 */\n  .el-button--primary {\n    background-color: #409eff;\n    border-color: #409eff;\n    color: white;\n    font-size: 16px;\n  }\n  \n  /* 链接样式 */\n  a {\n    color: #409eff;\n  }\n  </style>"],"mappings":"AAkEA;EACAA,KAAA;IACA;MACAC,IAAA;QACAC,QAAA;QACAC,QAAA;QACAC,KAAA;MACA;MACAC,aAAA;MACAC,aAAA;MACAC,aAAA;MACAC,aAAA;MACAC,aAAA;MACAC,WAAA;MACAC,eAAA;IACA;EACA;EACAC,OAAA;IACA;IACAC,cAAA;MACA,UAAAZ,IAAA,CAAAC,QAAA;QACA,KAAAG,aAAA;MACA;QACA,KAAAA,aAAA;MACA;IACA;IACAS,cAAA;MACA,UAAAb,IAAA,CAAAE,QAAA;QACA,KAAAG,aAAA;MACA,gBAAAL,IAAA,CAAAE,QAAA,CAAAY,MAAA;QACA,KAAAT,aAAA;MACA;QACA,KAAAA,aAAA;MACA;IACA;IACAU,WAAA;MACA,UAAAf,IAAA,CAAAC,QAAA,UAAAD,IAAA,CAAAE,QAAA,UAAAF,IAAA,CAAAG,KAAA;QACA,KAAAI,aAAA;MACA;QACA,KAAAA,aAAA,mBAAAP,IAAA,CAAAC,QAAA;MACA;MACA,KAAAK,aAAA;IACA;EACA;AACA","ignoreL