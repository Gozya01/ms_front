{"ast":null,"code":"export default {\n  data() {\n    return {\n      form: {\n        username: '',\n        account: '',\n        password: '',\n        info: ''\n      },\n      usernameError: '',\n      passwordError: '',\n      dialogVisible: false,\n      submitMessage: ''\n    };\n  },\n  methods: {\n    // 检查用户名\n    checkUsername() {\n      if (!this.form.username) {\n        this.usernameError = '用户名不能为空';\n      } else {\n        this.usernameError = '';\n      }\n    },\n    // 检查密码\n    checkPassword() {\n      if (!this.form.password) {\n        this.passwordError = '密码不能为空';\n      } else if (this.form.password.length < 6) {\n        this.passwordError = '密码长度至少6位';\n      } else {\n        this.passwordError = '';\n      }\n    },\n    submitForm() {\n      this.checkUsername();\n      this.checkPassword();\n      if (!this.form.username || !this.form.password || this.passwordError) {\n        this.submitMessage = '注册失败，请检查输入。';\n      } else {\n        this.submitMessage = `注册成功，账号为：${this.form.account}`;\n      }\n      this.dialogVisible = true;\n      setTimeout(() => {\n        window.location.reload();\n      }, 2000);\n    }\n  }\n};","map":{"version":3,"names":["data","form","username","account","password","info","usernameError","passwordError","dialogVisible","submitMessage","methods","checkUsername","checkPassword","length","submitForm","setTimeout","window","location","reload"],"sources":["src/components/RegisterForm.vue"],"sourcesContent":["<template>\n    <div id=\"app\" class=\"register-container\">\n      <!-- 标题 -->\n      <h2 class=\"register-title\">秒杀系统用户注册</h2>\n  \n      <el-form :model=\"form\" ref=\"form\" label-width=\"100px\" class=\"form-box\">\n        <!-- 用户名输入框 -->\n        <el-form-item label=\"用户名：\" :error=\"usernameError\">\n          <el-input\n            v-model=\"form.username\"\n            placeholder=\"请输入用户名\"\n            @blur=\"checkUsername\"\n            style=\"width: 300px\"\n          ></el-input>\n        </el-form-item>\n  \n        <!-- 账号输入框 -->\n        <el-form-item label=\"账号：\">\n          <el-input\n            v-model=\"form.account\"\n            placeholder=\"请输入账号\"\n            style=\"width: 300px\"\n          ></el-input>\n        </el-form-item>\n  \n        <!-- 密码输入框 -->\n        <el-form-item label=\"密码：\" :error=\"passwordError\">\n          <el-input\n            v-model=\"form.password\"\n            placeholder=\"请输入密码\"\n            show-password\n            @blur=\"checkPassword\"\n            style=\"width: 300px\"\n          ></el-input>\n        </el-form-item>\n  \n        <!-- 基本信息输入框 -->\n        <el-form-item label=\"基本信息：\">\n          <el-input\n            v-model=\"form.info\"\n            placeholder=\"请输入基本信息\"\n            style=\"width: 300px\"\n          ></el-input>\n        </el-form-item>\n  \n        <!-- 确定按钮 -->\n        <el-form-item>\n          <el-button type=\"primary\" @click=\"submitForm\">确定</el-button>\n        </el-form-item>\n      </el-form>\n  \n      <!-- 注册成功/失败信息 -->\n      <el-dialog :visible.sync=\"dialogVisible\" title=\"注册信息\">\n        <p>{{ submitMessage }}</p>\n      </el-dialog>\n    </div>\n  </template>\n  \n  <script>\n  export default {\n    data() {\n      return {\n        form: {\n          username: '',\n          account: '',\n          password: '',\n          info: ''\n        },\n        usernameError: '',\n        passwordError: '',\n        dialogVisible: false,\n        submitMessage: ''\n      };\n    },\n    methods: {\n      // 检查用户名\n      checkUsername() {\n        if (!this.form.username) {\n          this.usernameError = '用户名不能为空';\n        } else {\n          this.usernameError = '';\n        }\n      },\n      // 检查密码\n      checkPassword() {\n        if (!this.form.password) {\n          this.passwordError = '密码不能为空';\n        } else if (this.form.password.length < 6) {\n          this.passwordError = '密码长度至少6位';\n        } else {\n          this.passwordError = '';\n        }\n      },\n      submitForm() {\n        this.checkUsername();\n        this.checkPassword();\n  \n        if (!this.form.username || !this.form.password || this.passwordError) {\n          this.submitMessage = '注册失败，请检查输入。';\n        } else {\n          this.submitMessage = `注册成功，账号为：${this.form.account}`;\n        }\n        this.dialogVisible = true;\n        setTimeout(() => {\n          window.location.reload();\n        }, 2000);\n      }\n    }\n  };\n  </script>\n  \n  <style scoped>\n  /* 容器居中 */\n  .register-container {\n    display: flex;\n    flex-direction: column;\n    justify-content: center;\n    align-items: center;\n    height: 100vh; /* 全屏高度，垂直居中 */\n    background-color: #f5f5f5;\n  }\n  \n  /* 标题样式 */\n  .register-title {\n    text-align: center;\n    font-size: 24px;\n    margin-bottom: 20px;\n    color: #333;\n  }\n  \n  /* 表单容器 */\n  .form-box {\n    background-color: #fff;\n    padding: 20px;\n    border-radius: 8px;\n    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);\n  }\n  </style>"],"mappings":"AA2DA;EACAA,KAAA;IACA;MACAC,IAAA;QACAC,QAAA;QACAC,OAAA;QACAC,QAAA;QACAC,IAAA;MACA;MACAC,aAAA;MACAC,aAAA;MACAC,aAAA;MACAC,aAAA;IACA;EACA;EACAC,OAAA;IACA;IACAC,cAAA;MACA,UAAAV,IAAA,CAAAC,QAAA;QACA,KAAAI,aAAA;MACA;QACA,KAAAA,aAAA;MACA;IACA;IACA;IACAM,cAAA;MACA,UAAAX,IAAA,CAAAG,QAAA;QACA,KAAAG,aAAA;MACA,gBAAAN,IAAA,CAAAG,QAAA,CAAAS,MAAA;QACA,KAAAN,aAAA;MACA;QACA,KAAAA,aAAA;MACA;IACA;IACAO,WAAA;MACA,KAAAH,aAAA;MACA,KAAAC,aAAA;MAEA,UAAAX,IAAA,CAAAC,QAAA,UAAAD,IAAA,CAAAG,QAAA,SAAAG,aAAA;QACA,KAAAE,aAAA;MACA;QACA,KAAAA,aAAA,oBAAAR,IAAA,CAAAE,OAAA;MACA;MACA,KAAAK,aAAA;MACAO,UAAA;QACAC,MAAA,CAAAC,QAAA,CAAAC,MAAA;MACA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}