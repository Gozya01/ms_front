pt>\nexport default {\n  data() {\n    return {\n      form: {\n        userid: 0,\n        password: '',\n        agree: false\n      },\n      useridError: '',\n      passwordError: '',\n      dialogVisible: false,\n      submitMessage: '',\n    };\n  },\n  methods: {\n    // 检查用户名\n    checkUserid() {\n      if (!this.form.userid) {\n        this.useridError = '账号不能为空';\n      } else {\n        this.useridError = '';\n      }\n    },\n    checkPassword() {\n      this.showPasswordRules = false;\n      if (!this.form.password) {\n        this.passwordError = '密码不能为空';\n      } else {\n        this.passwordError = '';\n      }\n    },\n    submitForm() {\n      if (!this.form.userid || !this.form.password || !this.form.agree) {\n        this.submitMessage = '登录失败，请填写完整信息并同意服务协议。++++';\n        this.dialogVisible = true;\n      } else {\n        this.submitMessage = `登录成功，欢迎 ${this.form.userid}!`;\n      }\n      \n      const user = { id: this.form.userid, password: this.form.password, username: \" \" };\n      axios.post('http://localhost:28080/users_query', user)\n        .then(response => {\n          if (response.data.code === 200) {\n            this.login=response.data.msg;\n            //判断登录是否成功\n            if(this.login){\n                this.submitMessage = '登录失败，请填写完整信息并同意服务协议。';\n                this.dialogVisible = true;\n                this.submitMessage = `登录成功，欢迎 ${this.form.userid}!`;\n                this.dialogVisible = true;\n            }\n            else {\n              this.submitMessage = '登录失败，请填写完整信息并同意服务协议。';\n              this.dialogVisible = true;\n            }\n\n          } else {\n            console.error(response.data.msg);\n            this.submitMessage = '登录失败，请填写完整信息并同意服务协议。';\n            this.dialogVisible = true;\n          }\n        })\n        .catch(error => {\n          console.error(error);\n        });\n      \n    },\n    gotoregister() {\n      // this.dialogVisible = true;\n      this.$router.push({ name: 'register' });\n    }\n  }\n};\n</script>\n\n<style scoped>\n/* 容器居中 */\n.register-container {\n  display: flex;\n  flex-direction: column;\n  justify-content: center;\n  align-items: center;\n  height: 100vh;\n  background-color: #f0f2f5;\n}\n\n/* 标题与副标题 */\n.register-title {\n  font-size: 26px;\n  font-weight: bold;\n  color: #333;\n  margin-bottom: 10px;\n}\n\n.register-subtitle {\n  font-size: 14px;\n  color: #999;\n  margin-bottom: 30px;\n}\n\n/* 表单容器 */\n.form-box {\n  background-color: #fff;\n  padding: 20px;\n  border-radius: 8px;\n  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);\n}\n\n/* 注册按钮 */\n.el-button--primary {\n  background-color: #409eff;\n  border-color: #409eff;\n  color: white;\n  font-size: 16px;\n}\n\n/* 链接样式 */\na {\n  color: #409eff;\n}\n</style>"],"mappings":";AAkDA;EACAA,KAAA;IACA;MACAC,IAAA;QACAC,MAAA;QACAC,QAAA;QACAC,KAAA;MACA;MACAC,WAAA;MACAC,aAAA;MACAC,aAAA;MACAC,aAAA;IACA;EACA;EACAC,OAAA;IACA;IACAC,YAAA;MACA,UAAAT,IAAA,CAAAC,MAAA;QACA,KAAAG,WAAA;MACA;QACA,KAAAA,WAAA;MACA;IACA;IACAM,cAAA;MACA,KAAAC,iBAAA;MACA,UAAAX,IAAA,CAAAE,QAAA;QACA,KAAAG,aAAA;MACA;QACA,KAAAA,aAAA;MACA;IACA;IACAO,WAAA;MACA,UAAAZ,IAAA,CAAAC,MAAA,UAAAD,IAAA,CAAAE,QAAA,UAAAF,IAAA,CAAAG,KAAA;QACA,KAAAI,aAAA;QACA,KAAAD,aAAA;MACA;QACA,KAAAC,aAAA,mBAAAP,IAAA,CAAAC,MAAA;MACA;MAEA,MAAAY,IAAA;QAAAC,EAAA,OAAAd,IAAA,CAAAC,MAAA;QAAAC,QAAA,OAAAF,IAAA,CAAAE,QAAA;QAAAa,QAAA;MAAA;MACAC,KAAA,CAAAC,IAAA,uCAAAJ,IAAA,EACAK,IAAA,CAAAC,QAAA;QACA,IAAAA,QAAA,CAAApB,IAAA,CAAAqB,IAAA;UACA,KAAAC,KAAA,GAAAF,QAAA,CAAApB,IAAA,CAAAuB,GAAA;UACA;UACA,SAAAD,KAAA;YACA,KAAAd,aAAA;YACA,KAAAD,aAAA;YACA,KAAAC,aAAA,mBAAAP,IAAA,CAAAC,MAAA;YACA,KAAAK,aAAA;UACA,OACA;YACA,KAAAC,aAAA;YACA,KAAAD,aAAA;UACA;QAEA;UACAiB,OAAA,CAAAC,KAAA,CAAAL,QAAA,CAAApB,IAAA,CAAAuB,GAAA;UACA,KAAAf,aAAA;UACA,KAAAD,aAAA;QACA;MACA,GACAmB,KAAA,CAAAD,KAAA;QACAD,OAAA,CAAAC,KAAA,CAAAA,KAAA;MACA;IAEA;IACAE,aAAA;MACA;MACA,KAAAC,OAAA,CAAAC,IAAA;QAAAC,IAAA;MAAA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependenci